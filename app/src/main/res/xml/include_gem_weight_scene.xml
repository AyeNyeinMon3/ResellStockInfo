            android:id="@+id/textInputLayout_gem_weight_P"
            motion:layout_constraintEnd_toStartOf="@+id/textInputLayout_gem_weight_Y"
            motion:layout_constraintStart_toEndOf="@+id/textInputLayout_gem_weight_K"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toBottomOf="@+id/rBtn_manually"
            android:layout_marginStart="16dp"
            motion:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="32dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/textInputLayout_gem_weight_Y"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/textInputLayout_gem_weight_P"
