<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/btn_edit_purchase_price" motion:clickAction="transitionToEnd"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/view"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/textInputLayout_purchase_price"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_lbl_purchase_price"
            motion:layout_constraintStart_toStartOf="@+id/tv_lbl_purchase_price"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            motion:transitionEasing="linear" />
        <Constraint
            android:id="@+id/btn_cancel_purchase_price"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/tv_lbl_purchase_price"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="@+id/tv_lbl_purchase_price"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_add_purchase_price"
            android:layout_width="124dp"
            android:layout_height="48dp"
            motion:layout_constraintTop_toBottomOf="@+id/textInputLayout_purchase_price"
            motion:layout_constraintStart_toStartOf="@+id/textInputLayout_purchase_price"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/view2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toBottomOf="@id/btn_add_purchase_price"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:visibility="gone" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_purchase_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_lbl_purchase_price"
            motion:layout_constraintStart_toStartOf="@+id/tv_lbl_purchase_price"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_edit_purchase_price"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/tv_lbl_purchase_price"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="@+id/tv_lbl_purchase_price"
            android:visibility="gone" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:duration="500">
        <OnClick motion:targetId="@+id/btn_cancel_purchase_price" />
    </Transition>
</MotionScene>